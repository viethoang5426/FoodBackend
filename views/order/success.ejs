<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');
</style>

<% if (code==="00" ) { %>
    <div
        style="text-align: center; font-size: 2em; font-family: 'Roboto', sans-serif; font-weight: 700; color: #009688; margin-top: 15vh;">
        <img src="https://cdn-icons-png.flaticon.com/512/5161/5161320.png" alt=""
            style="width: 60%; max-width: 300px; margin-bottom: 20px;">
        <p style="margin-bottom: 10px; color: #009688;">Thanh Toán Sản Phẩm Thành Công !</p>
        <p style="color: #009688; font-size: 1.2em;">Kiểm tra sản phẩm ở phần hóa đơn</p>
    </div>
    <% } else { %>
        <div
            style="display: flex; justify-content: center; align-items: center; flex-direction: column; background-color: #FFEBEE; padding: 20px; border-radius: 10px; position: fixed; top: 0; left: 0; width: 100%; height: 100%; overflow: auto;">
            <img src="https://cdn-icons-png.flaticon.com/512/5193/5193741.png" alt=""
                style="width: 40%; max-width: 300px; margin-bottom: 20px;">

            <p
                style="text-align: center; color: #E91E63; font-size: 2em; font-family: 'Roboto', sans-serif; font-weight: 700; margin-bottom: 10px;">
                Giao dịch thất bại</p>
            <p style="text-align: center; font-size: 1.5em; font-family: 'Roboto', sans-serif; margin-bottom: 20px;">
                <%= code %>
            </p>
            <p style="text-align: center; font-size: 1.2em; color: #757575; font-family: 'Roboto', sans-serif;">Vui lòng
                thử lại hoặc liên hệ hỗ trợ.</p>
        </div>
        <% } %>